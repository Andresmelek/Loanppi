<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_investor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_inside"
            android:paddingBottom="16dp"
            tools:context=".dashboard">

            <TextView
                android:id="@+id/txt_saludo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:text="Hola, Andrea"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/subtitle"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@+id/img_user_photo"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintStart_toEndOf="@+id/img_user_photo"
                app:layout_constraintTop_toTopOf="@+id/img_user_photo"
                app:layout_constraintWidth_percent="0.6" />

            <ImageView
                android:id="@+id/img_user_photo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/user_photo"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/txt_balance"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:text="@string/balance"
                android:textColor="@color/textPrimary"
                app:autoSizeTextType="uniform"
                app:layout_constraintHeight_percent="0.06"
                app:layout_constraintStart_toStartOf="@+id/bar_prog_moto"
                app:layout_constraintTop_toBottomOf="@+id/img_user_photo"
                app:layout_constraintWidth_percent="0.5" />

            <SeekBar
                android:id="@+id/bar_prog_moto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="60dp"
                android:background="#0D272525"
                android:progress="30"
                android:progressBackgroundTint="#000000"
                android:progressTint="@color/loanppi"
                android:thumb="@drawable/moto1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.09"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_balance"
                app:layout_constraintWidth_percent="0.8"
                app:tickMarkTint="#000000" />

            <TextView
                android:id="@+id/txt_meta"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:text="@string/txt_return"
                android:textAlignment="viewEnd"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/val_meta"
                app:layout_constraintEnd_toEndOf="@+id/val_meta"
                app:layout_constraintHeight_percent="0.04"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/val_meta"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="830.000"
                android:textAlignment="viewEnd"
                android:textColor="@color/textPrimary"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/bar_prog_moto"
                app:layout_constraintEnd_toEndOf="@+id/bar_prog_moto"
                app:layout_constraintHeight_percent="0.03"
                app:layout_constraintWidth_percent="0.2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_bar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="@+id/bar_prog_moto"
                app:layout_constraintHeight_percent="0.03"
                app:layout_constraintStart_toStartOf="@+id/bar_prog_moto"
                app:layout_constraintTop_toBottomOf="@+id/bar_prog_moto"
                app:layout_constraintWidth_percent="0.8">

                <TextView
                    android:id="@+id/bar_prog_value"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="249.000"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintHorizontal_bias="0.31"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_invest"
                android:layout_width="165dp"
                android:layout_height="0dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/btn_dashboard"
                android:text="@string/invest"
                android:onClick="onInvest"
                android:textColor="@color/textPrimary"
                app:layout_constraintEnd_toStartOf="@+id/btn_my_investment"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cons_bar"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/btn_my_investment"
                android:layout_width="165dp"
                android:layout_height="0dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/btn_dashboard"
                android:text="@string/my_investment"
                android:onClick="onMyInvestment"
                android:textColor="@color/textPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintStart_toEndOf="@+id/btn_invest"
                app:layout_constraintTop_toBottomOf="@+id/cons_bar"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/btn_history"
                android:layout_width="165dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_dashboard"
                android:enabled="false"
                android:text="@string/history"
                android:textColor="@color/textPrimary"
                app:layout_constraintEnd_toEndOf="@+id/btn_my_investment"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintStart_toStartOf="@+id/btn_invest"
                app:layout_constraintTop_toBottomOf="@+id/btn_invest"
                app:layout_constraintWidth_percent="0.4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>